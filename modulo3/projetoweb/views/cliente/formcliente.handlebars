<h1>Cliente</h1>
<hr>
<form action="/clientes/save" method="POST">
    <div class="form-group">
        <label for="txtnome">Nome:</label>
        <input type="text" class="form-control" id="txtnome" name="nome" value="{{cliente.nome}}" required>
    </div>
    <div class="form-group">
        <label for="txtendereco">Endere√ßo:</label>
        <input type="text" class="form-control" id="txtendereco" name="endereco" value="{{cliente.endereco}}" required>
    </div>
    <div class="form-group">
        <label for="txtsexo">Sexo:</label>
        <input type="text" class="form-control" id="txtsexo" name="sexo" value="{{cliente.sexo}}" required>
    </div>
    <div class="form-group">
        <label for="txttelefone">Telefone:</label>
        <input type="text" class="form-control" id="txttelefone" name="telefone" value="{{cliente.telefone}}" required>
    </div>
    <input type="text" name="id" type="submit" value="{{cliente.id}}" hidden>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>